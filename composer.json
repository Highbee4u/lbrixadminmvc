{
    "name": "lbrix/lbrix-mvc",
    "description": "A simple MVC framework for PHP",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "app/Core/"
        },
        "classmap": [
            "app/Controllers/",
            "app/Models/",
            "app/Core/",
            "app/Middlewares/",
            "app/Services/"
        ],
        "files": [
            "app/Core/Helpers.php"
        ]
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "post-install-cmd": [
            "echo 'Installation completed!'"
        ]
    }
}